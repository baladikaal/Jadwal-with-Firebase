<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".MenuKuliah.Catatan.CatatanUpdateActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/catatan_judul_update"
        android:hint="Judul Catatan"
        android:maxLines="1"
        android:inputType="text"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/catatan_tgl_update"
        android:hint="Tanggal Catatan"
        android:inputType="text"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/catatan_isi_update"
        android:hint="Isi Catatan"
        />

    <Button
        android:layout_marginTop="20dp"
        android:textColor="@color/putih"
        android:background="@drawable/custom_button_ungu"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btn_save_catatan"/>

    <Button
        android:layout_marginTop="20dp"
        android:textColor="@color/putih"
        android:background="@drawable/custom_button_ungu"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btn_cancel_catatan"/>

</LinearLayout>